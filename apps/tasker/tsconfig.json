{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
			"@/*": ["./src/*"],
			"@/components/*": ["./src/components/*"],
			"@/views/*": ["./src/views/*"],
			"@/modules/*": ["./src/modules/*"],
			"@/shared/*": ["./src/shared/*"],
			"helpers": ["./src/shared/helpers/index.ts"],
			"ui": ["./src/shared/components/ui/index.ts"]
		}
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next.config.js"],
  "exclude": ["node_modules"]
}
