{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/modules/*": ["./src/modules/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/views/*": ["./src/views/*"],
      "@/types/*": ["./src/types/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/server/*": ["./src/server/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/api/*": ["./src/api/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/features/*": ["./src/features/*"],
      "@repo/env": ["../../packages/env/src"],
      "@repo/ui/*": ["../../packages/ui/src/*"],
      "@repo/helpers/*": ["../../packages/helpers/src/*"],
      "@repo/configuration/*": ["../../packages/configuration/src/*"],
      "@repo/styles/*": ["../../packages/styles/src/*"]
    }
  }
} 